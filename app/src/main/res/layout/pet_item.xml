<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/login_round">

        <!-- Иконка питомца -->
        <ImageView
            android:id="@+id/ivPetIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/paw_small"
            android:layout_marginEnd="16dp"
            android:contentDescription="Питомец" />

        <!-- Данные питомца -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя: Барсик"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/round_let"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/tvPetWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вес: 4.5 кг"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/round_let"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_dialog_rounded">

    <TextView
        android:id="@+id/tvnamePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя: Бисмарк"
        android:fontFamily="@font/round_let"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес: 4.5"
        android:fontFamily="@font/round_let"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvtimeForFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Времён кормления: 3"
        android:fontFamily="@font/round_let"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnDialogOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/round_button_field"
        android:fontFamily="@font/round_let"
        android:text="Ок"/>
</LinearLayout>
